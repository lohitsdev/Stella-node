{
  "name": "stella",
  "version": "1.0.0",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "nodemon --exec \"node --import tsx src/index.ts\"",
    "dev:api": "nodemon --exec \"node --import tsx src/scripts/start-api.ts\"",
    "start": "node dist/index.js",
    "start:api": "node dist/scripts/start-api.js",
    "lint": "eslint src --ext .ts,.js --fix",
    "lint:check": "eslint src --ext .ts,.js",
    "format": "prettier --write src/**/*.{ts,js,json,md}",
    "format:check": "prettier --check src/**/*.{ts,js,json,md}",
    "lint:staged": "lint-staged",
    "prepare": "husky install",
    "test": "echo \"Error: no test specified\" && exit 1",
    "swagger": "node -e \"console.log('Swagger docs available at: http://localhost:3000/api-docs')\"",
    "setup": "cp .env.example .env && echo 'Please configure your .env file with actual values'",
    "quality": "npm run lint:check && npm run format:check",
    "quality:fix": "npm run lint && npm run format"
  },
  "keywords": [
    "nodejs",
    "typescript",
    "mongodb",
    "pinecone",
    "ai"
  ],
  "author": "",
  "license": "ISC",
  "description": "A modern Node.js application with TypeScript, MongoDB, and Pinecone for AI-powered chat and search capabilities",
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.8.1",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.1.0",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-security": "^1.7.1",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "nodemon": "^3.1.10",
    "prettier": "^3.2.5",
    "prom-client": "^15.1.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@pinecone-database/pinecone": "^6.1.2",
    "bcryptjs": "^3.0.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "compression": "^1.7.4",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.2.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.18.0",
    "openai": "^5.11.0",
    "reflect-metadata": "^0.2.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "lint-staged": {
    "src/**/*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "src/**/*.{json,md}": [
      "prettier --write"
    ]
  }
}
